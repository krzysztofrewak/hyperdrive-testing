{
    "name": "krzysztofrewak/hyperdrive-testing",
    "description": "Hiperdrive testing",
    "keywords": [
        "PHP 8.0",
        "Behat",
        "Docker",
        "Composer",
        "CLImate"
    ],
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Hyperdrive\\": "src/"
        }
    },
    "require": {
        "php": "^8.0",
        "symfony/yaml": "^5.1",
        "illuminate/support": "^8.16",
        "league/climate": "^3.6"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "phpunit/phpunit": "^9.2",
        "symplify/easy-coding-standard": "^9.1",
        "krzysztofrewak/php-cs-double-quote-fixer": "^1.0",
        "rector/rector": "^0.9.29"
    },
    "scripts": {
        "behat": "./vendor/bin/behat",
        "ecs": "./vendor/bin/ecs check",
        "rector": "./vendor/bin/rector process src --dry-run",
        "check": [
            "composer behat",
            "composer ecs",
            "composer rector"
        ]
    }
}
